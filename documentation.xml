<?xml version="1.0" encoding="UTF-8"?>
<ProjectDocumentation>
    <Project>
        <Name>NumConvert Pro</Name>
        <Type>Progressive Web App (PWA)</Type>
        <Description>Real-time number system converter between binary, decimal, hexadecimal, and octal systems</Description>
        <Version>1.0</Version>
    </Project>

    <FileStructure>
        <File>
            <Name>index.html</Name>
            <Type>Main Application File</Type>
            <Description>Complete UI implementation with conversion logic and PWA features</Description>
        </File>
        <File>
            <Name>manifest.json</Name>
            <Type>PWA Manifest</Type>
            <Description>App installation configuration and metadata</Description>
        </File>
        <File>
            <Name>sw.js</Name>
            <Type>Service Worker</Type>
            <Description>Offline functionality and caching strategy</Description>
        </File>
    </FileStructure>

    <CoreFeatures>
        <Feature>
            <Name>Real-time Conversion</Name>
            <Description>Instant results as user types without requiring button presses</Description>
            <Icon>fas fa-bolt</Icon>
        </Feature>
        <Feature>
            <Name>Auto-detection</Name>
            <Description>Automatically detects number system based on input patterns</Description>
            <Icon>fas fa-magic</Icon>
        </Feature>
        <Feature>
            <Name>One-Click Copy</Name>
            <Description>Copy any conversion result with single click</Description>
            <Icon>fas fa-clipboard</Icon>
        </Feature>
        <Feature>
            <Name>Multi-system Support</Name>
            <Description>Convert between four number systems simultaneously</Description>
            <Icon>fas fa-exchange-alt</Icon>
        </Feature>
    </CoreFeatures>

    <NumberSystems>
        <System>
            <Name>Binary</Name>
            <Base>2</Base>
            <Prefix>0b</Prefix>
            <Pattern>^[01]+$|^0b[01]+$</Pattern>
            <Icon>fas fa-dice-two</Icon>
        </System>
        <System>
            <Name>Decimal</Name>
            <Base>10</Base>
            <Prefix>None</Prefix>
            <Pattern>^\d+$</Pattern>
            <Icon>fas fa-dice</Icon>
        </System>
        <System>
            <Name>Hexadecimal</Name>
            <Base>16</Base>
            <Prefix>0x</Prefix>
            <Pattern>^[0-9a-f]+$|^0x[0-9a-f]+$</Pattern>
            <Icon>fas fa-dice-six</Icon>
        </System>
        <System>
            <Name>Octal</Name>
            <Base>8</Base>
            <Prefix>0o</Prefix>
            <Pattern>^[0-7]+$|^0o[0-7]+$</Pattern>
            <Icon>fas fa-dice-four</Icon>
        </System>
    </NumberSystems>

    <InputFormats>
        <Format>
            <System>Binary</System>
            <Examples>1010, 0b1010, 11001100</Examples>
        </Format>
        <Format>
            <System>Decimal</System>
            <Examples>255, 1024, 42</Examples>
        </Format>
        <Format>
            <System>Hexadecimal</System>
            <Examples>FF, 0xFF, A1B2</Examples>
        </Format>
        <Format>
            <System>Octal</System>
            <Examples>377, 0o377, 755</Examples>
        </Format>
    </InputFormats>

    <TechnicalSpecifications>
        <Frontend>
            <Technology>Vanilla HTML5, CSS3, JavaScript ES6+</Technology>
            <Responsive>Yes - Mobile-first design</Responsive>
            <Icons>Font Awesome 6.4.0</Icons>
            <Theme>Dark with gradient accents</Theme>
        </Frontend>
        
        <PWAFeatures>
            <Feature>Installable</Feature>
            <Feature>Offline Support</Feature>
            <Feature>Standalone Display</Feature>
            <Feature>Service Worker Caching</Feature>
        </PWAFeatures>

        <BrowserAPIs>
            <API>Service Worker API</API>
            <API>Clipboard API</API>
            <API>Web App Manifest</API>
            <API>Cache API</API>
            <API>BeforeInstallPrompt Event</API>
        </BrowserAPIs>
    </TechnicalSpecifications>

    <ConversionLogic>
        <Step number="1">
            <Action>Input Cleaning</Action>
            <Description>Remove system prefixes (0b, 0x, 0o) from input</Description>
        </Step>
        <Step number="2">
            <Action>System Detection</Action>
            <Description>Auto-detect or use manually selected number system</Description>
        </Step>
        <Step number="3">
            <Action>Decimal Conversion</Action>
            <Description>Convert input to decimal as intermediate format</Description>
        </Step>
        <Step number="4">
            <Action>Target Conversion</Action>
            <Description>Convert decimal to all target number systems</Description>
        </Step>
    </ConversionLogic>

    <CacheStrategy>
        <CacheName>num-converter-v1</CacheName>
        <CachedResources>
            <Resource>./ (Root)</Resource>
            <Resource>./index.html</Resource>
            <Resource>./manifest.json</Resource>
        </CachedResources>
        <Strategy>Cache-first with network fallback</Strategy>
    </CacheStrategy>

    <UIComponents>
        <Component>
            <Name>Converter Card</Name>
            <Elements>Input field, System selector, Error display</Elements>
        </Component>
        <Component>
            <Name>Result Cards</Name>
            <Elements>System label, Converted value, Copy button</Elements>
        </Component>
        <Component>
            <Name>Feature Cards</Name>
            <Elements>Icon, Title, Description</Elements>
        </Component>
        <Component>
            <Name>Install Button</Name>
            <Elements>Fixed position, Appears when installable</Elements>
        </Component>
        <Component>
            <Name>Notification</Name>
            <Elements>Copy confirmation, Auto-dismiss</Elements>
        </Component>
    </UIComponents>

